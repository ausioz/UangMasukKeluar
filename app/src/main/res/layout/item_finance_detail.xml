<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_wallet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            tools:text="08:42:56" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTerimaDari"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Miracle Westervelt" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingVertical="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Rp 260.000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMasukKe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:paddingVertical="5dp"
            tools:text="Kasir perangkat ke-49" />

        <TextView
            android:id="@+id/tvKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_note"
            android:drawablePadding="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/rounded_background_white_outline_black"
            android:textColor="#888888"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            tools:text="menjual kardus" />


    </LinearLayout>


</LinearLayout>